{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": ["$MONGODB_URI", "$NODE_ENV", "$VERCEL"],
  "pipeline": {
    "build": {
      "outputs": [
        "dist/**",
        ".next/**",
        "build/**",
        "api/**",
        "public/build/**"
      ],
      "dependsOn": ["^build"]
    },
    "build:app": {
      "outputs": [".next/**", "api/**"],
      "dependsOn": ["build"]
    },
    "start": {
      "dependsOn": ["^build:app"],
      "cache": false
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": []
    },
    "lint": {
      "dependsOn": [],
      "outputs": []
    },
    "dev": {
      "dependsOn": ["build"],
      "cache": false
    },
    "clean": {
      "cache": false
    }
  }
}
