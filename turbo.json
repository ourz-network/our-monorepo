{
  "$schema": "https://turborepo.org/schema.json",
  "globalEnv": [
    "MONGODB_URI",
    "NODE_ENV",
    "ALCHEMY_KEY",
    "ZORA_API_KEY",
    "VERCEL",
    "NEXT_PUBLIC_CHAIN_ID",
    "NEXT_PUBLIC_ALCHEMY_ID",
    "NEXT_PUBLIC_CONTRACT_ADDRESSES",
    "NEXT_PUBLIC_VERCEL_URL",
    "NEXT_PUBLIC_IPFS_GATEWAY",
    "NEXT_PUBLIC_BASE_URL",
    "NEXT_PUBLIC_IMAGE_HOST",
    "NEXT_PUBLIC_IMAGE_HOST_APPEND",
    "NEXT_PUBLIC_ALCHEMY_ID"
  ],
  "pipeline": {
    "dev": {
      "dependsOn": ["build:ui"],
      "cache": false
    },
    "dev:ui": {
      "dependsOn": ["build:sb", "build:ui"],
      "cache": false
    },
    "dev:ui:css": {
      "dependsOn": ["build:ui"]
    },
    "dev:ui:sb": {
      "dependsOn": ["build:sb"]
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": []
    },
    "build": {
      "outputs": [
        "dist/**",
        ".next/**",
        "build/**",
        "api/**",
        "public/build/**"
      ],
      "dependsOn": ["^build"]
    },
    "build:app": {
      "outputs": [".next/**", "api/**"],
      "dependsOn": ["^build:ui"]
    },
    "build:ui": {
      "outputs": [".dist/**"],
      "dependsOn": ["build"]
    },

    "build:sb": {
      "outputs": [".storybook/**"],
      "dependsOn": ["build:ui"]
    },
    "start": {
      "dependsOn": ["build:app"],
      "cache": false
    },
    "lint": {
      "dependsOn": ["lint:app", "lint:language", "lint:ui"],
      "outputs": []
    },
    "lint:app": {
      "dependsOn": [],
      "outputs": []
    },
    "lint:language": {
      "dependsOn": [],
      "outputs": []
    },
    "lint:ui": {
      "dependsOn": [],
      "outputs": []
    },
    "clean": {
      "cache": false
    }
  }
}
