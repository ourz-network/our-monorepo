{
  "$schema": "https://turborepo.org/schema.json",
  "globalEnv": [
    "MONGODB_URI",
    "NODE_ENV",
    "ALCHEMY_KEY_SERVER",
    "VERCEL",
    "NEXT_PUBLIC_CHAIN_ID",
    "NEXT_PUBLIC_ALCHEMY_ID",
    "NEXT_PUBLIC_CONTRACT_ADDRESSES",
    "NEXT_PUBLIC_VERCEL_URL",
    "NEXT_PUBLIC_BASE_URL",
    "NEXT_PUBLIC_IMAGE_HOST",
    "NEXT_PUBLIC_IMAGE_HOST_APPEND",
    "NEXT_PUBLIC_ALCHEMY_ID"
  ],
  "pipeline": {
    "build": {
      "outputs": [
        "dist/**",
        ".next/**",
        "build/**",
        "api/**",
        "public/build/**"
      ],
      "dependsOn": ["^build"]
    },
    "build:app": {
      "outputs": [".next/**", "api/**"],
      "dependsOn": ["build"]
    },
    "start": {
      "dependsOn": ["^build:app"],
      "cache": false
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": []
    },
    "lint": {
      "dependsOn": [],
      "outputs": []
    },
    "dev": {
      "dependsOn": ["build"],
      "cache": false
    },
    "clean": {
      "cache": false
    }
  }
}
