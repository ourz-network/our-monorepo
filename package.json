{
  "name": "our-monorepo",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "full-turbo": "pnpm build:app",
    "build:app": "turbo run build:app --no-daemon",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:og": "turbo run dev --parallel --continue",
    "start": "pnpm lint && pnpm build:app && turbo run start",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,md,html,css}\"",
    "lint": "turbo run lint && pnpm lint:language",
    "lint:language": "alex .",
    "test": "turbo run test",
    "prepare": "husky install"
  },
  "devDependencies": {
    "alex": "latest",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.4",
    "prettier": "latest",
    "turbo": "latest"
  },
  "dependencies": {
    "rimraf": "^3.0.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md,html,css}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint"
    ],
    "*.{js,jsx,ts,tsx,md}": [
      "alex"
    ]
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "pnpm@7.13.4",
  "pnpm": {
    "overrides": {
      "node-forge@<1.0.0": ">=1.0.0",
      "trim@<0.0.3": ">=0.0.3",
      "node-forge@<1.3.0": ">=1.3.0",
      "trim-newlines@<3.0.1": ">=3.0.1",
      "glob-parent@<5.1.2": ">=5.1.2",
      "node-fetch@<2.6.1": ">=2.6.1",
      "ejs@<3.1.7": ">=3.1.7",
      "node-fetch@<2.6.7": ">=2.6.7",
      "yargs-parser@>=16.0.0 <18.1.1": ">=18.1.1"
    }
  }
}
