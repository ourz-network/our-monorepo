{
  "compilerOptions": {
    // nextjs
    "target": "ES2016",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    // other
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": "src/common/types/",
    "emitDeclarationOnly": true,
    "incremental": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "paths": {
      "@/app/*": ["src/app/*"],
      "@/common/*": ["src/common/*"],
      "@/components/*": ["src/common/components/*"],
      "@/hooks/*": ["src/common/hooks/*"],
      "@/modules/*": ["src/modules/*"],
      "@/Create/*": ["src/modules/Create/*"],
      "@/ethereum/*": ["src/modules/ethereum/*"],
      "@/mongodb/*": ["src/modules/mongodb/*"],
      "@/subgraphs/*": ["src/modules/subgraphs/*"],
      "@/pages/*": ["src/pages/*"],
      "@/types/*": ["src/types/*"],
      "@/utils/*": ["src/utils/*"]
    },
    "preserveConstEnums": true,
    "removeComments": false
  },
  "exclude": [".github", ".next", ".husky", ".vscode", "node_modules"],
  "include": ["next-env.d.ts", "src/**/*.ts", "src/**/*.tsx"]
}
